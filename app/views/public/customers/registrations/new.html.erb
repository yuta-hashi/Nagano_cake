<h2>Sign up</h2>

<%= form_with model: @customer, url: {controller: 'public/registrations', action: 'create'}, local:true do |f| %>
<%= render "public/customers/shared/error_messages", resource: resource %>

<div class="field">
  <p>名前</p>
  <%= f.label, "姓" :last_name %>
  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  <%= f.label, "名" :first_name %>
  <%= f.text_field :first_name, autocomplete: "first_name" %>
</div>

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
  <%= f.label :password %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password" %>
</div>

<div class="field">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<div class="actions">
  <%= f.submit "Sign up" %>
</div>
<% end %>

<%= render "public/customers/shared/links" %>