<h3>商品一覧</h3>
<%= link_to new_admin_item_path do %>
<button>
  +
</button>
<% end %>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to admin_item_path(item) do %>
        <%= item.name %>
        <% end %>
      </td>
      <td>
        <%= item.price %>
      </td>

      <td>
        <%= item.genre.name %>
      </td>

      <% if item.is_active == true %>
      <td>販売中</td>
      <% else %>
      <td>販売停止中</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>