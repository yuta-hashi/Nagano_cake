<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "customers/shared/error_messages", resource: resource %>

<div class="field">
  名前
  <%= f.label :last_name, '(姓)' %>
  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  <%= f.label :first_name, '(名)' %>
  <%= f.text_field :first_name, autocomplete: "first_name" %>
</div>

<div class="field">
  フリガナ
  <%= f.label :last_name_kana, '(セイ)' %>
  <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
  <%= f.label :first_name_kana, '(メイ)' %>
  <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
</div>

<div class="field">
  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email, autocomplete: "email" %>
</div>

<div class="field">
  <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code, autocomplete: "postal_code" %>
</div>

<div class="field">
  <%= f.label :address, "住所" %>
  <%= f.text_field :address, autocomplete: "address" %>
</div>

<div class="field">
  <%= f.label :telephone_number, "電話番号" %>
  <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
</div>

<div class="actions">
  <%= f.submit "新規登録" %>
</div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>